# MoxNAS Environment Configuration
# Copy this file to .env.local and configure your values

# Security Configuration
SECRET_KEY=your-secret-key-here-generate-with-secrets.token-hex-32
SESSION_COOKIE_SECURE=true

# Database Configuration
DATABASE_URL=postgresql://moxnas:your_password@localhost/moxnas
DEV_DATABASE_URL=postgresql://moxnas:your_password@localhost/moxnas_dev
TEST_DATABASE_URL=sqlite:///test.db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Mail Configuration
MAIL_SERVER=localhost
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=
MAIL_PASSWORD=

# Application Configuration
FLASK_ENV=production
MOXNAS_ADMIN_EMAIL=admin@moxnas.local
MOXNAS_STORAGE_ROOT=/mnt/storage
MOXNAS_BACKUP_ROOT=/mnt/backups
MOXNAS_LOG_LEVEL=INFO

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379/1

# Security Headers
WTF_CSRF_ENABLED=true
WTF_CSRF_TIME_LIMIT=3600
