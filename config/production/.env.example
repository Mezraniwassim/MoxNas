# MoxNAS Production Environment Configuration
# Copy this file to .env and customize the values

# ====================
# Core Django Settings
# ====================

# SECURITY WARNING: Generate a unique secret key for production
# You can generate one at: https://djecrety.ir/
SECRET_KEY=your-secret-key-here-change-this-in-production

# Allowed hosts (comma-separated list)
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,10.0.0.100

# CORS allowed origins (comma-separated list)
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ====================
# Database Configuration
# ====================

# SQLite (default - good for single-node deployments)
DATABASE_URL=sqlite:///var/lib/moxnas/db.sqlite3

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://moxnas:password@localhost:5432/moxnas
# DATABASE_SSL=false

# MySQL (alternative option)
# DATABASE_URL=mysql://moxnas:password@localhost:3306/moxnas

# ====================
# Cache Configuration
# ====================

# Redis URL for caching and sessions
REDIS_URL=redis://localhost:6379/0

# ====================
# Security Settings
# ====================

# Enable HTTPS (set to true if using SSL/TLS)
USE_HTTPS=false

# ====================
# Email Configuration
# ====================

# SMTP settings for error notifications
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=moxnas@your-domain.com
ADMIN_EMAIL=admin@your-domain.com

# ====================
# System Configuration
# ====================

# Timezone
TIME_ZONE=UTC

# Storage root directory
MOXNAS_STORAGE_ROOT=/mnt/storage

# Configuration directory
MOXNAS_CONFIG_DIR=/etc/moxnas

# Log directory
MOXNAS_LOG_DIR=/var/log/moxnas

# ====================
# Container/Deployment
# ====================

# Create default superuser (for container deployments)
CREATE_SUPERUSER=true
SUPERUSER_USERNAME=admin
SUPERUSER_EMAIL=admin@moxnas.local
SUPERUSER_PASSWORD=change-this-password

# ====================
# External Services
# ====================

# Backup configuration
# BACKUP_ENABLED=true
# BACKUP_STORAGE=s3
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=moxnas-backups
# AWS_S3_REGION_NAME=us-east-1

# Monitoring
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# MONITORING_ENABLED=true

# ====================
# Feature Flags
# ====================

# Enable/disable specific features
# ENABLE_SNAPSHOTS=true
# ENABLE_ENCRYPTION=true
# ENABLE_REPLICATION=false

# ====================
# Performance Tuning
# ====================

# Database connection pool settings (for PostgreSQL/MySQL)
# DB_CONN_MAX_AGE=600
# DB_CONN_POOL_SIZE=20

# Cache timeout settings
# CACHE_TIMEOUT=300
# SESSION_TIMEOUT=86400

# Upload limits
# MAX_UPLOAD_SIZE=1073741824  # 1GB
# MAX_FILE_SIZE=104857600     # 100MB